<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/news_image_technology"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/header_title_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/favorite"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/content_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/content"
           android:layout_margin="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <ImageView
            android:id="@+id/onsave_news_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_outline_24"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/time_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12.34.222"
        android:textSize="13sp"
        android:layout_gravity="bottom"
        android:padding="20dp"
        />

</com.google.android.material.card.MaterialCardView>